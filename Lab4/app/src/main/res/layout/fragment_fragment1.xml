<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.hasan.lab4.Fragment1">

    <!-- TODO: Update blank fragment layout -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#757575"
        android:layout_below="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/rl_2">
        <TextView
            android:textColor="#FFFFFF"
            android:id="@+id/tv_1"
            android:textSize="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synth polaroid  bitters chill wave pickled. Vegan disrupt!"/>
        <TextView
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19 Jul"
            android:layout_below="@+id/tv_1"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/rl_3"
        android:layout_alignParentBottom="true">
        <TextView
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="It was a humorously perilous business for both of us. For, before we proceed further, it must be said that the monkey-rope was fast at both ends; fast to Queequeg's broad canvas belt, and fast to my narrow leather one. So that for better or for worse, we two, for the time, were wedded; and should poor Queequeg sink to rise no more, then both usage and honour demanded, that instead of cutting the cord, it should drag me down in his wake. So, then, an elongated Siamese ligature united us. Queequeg was my own inseparable twin brother; nor could I any way get rid of the dangerous liabilities which the hempen bond entailed."/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/rl_1"
        android:background="@drawable/anh"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/back"
            android:background="@drawable/arrowbacka"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/share"
            android:layout_alignParentRight="true"
            android:background="@drawable/sahre"/>

    </RelativeLayout>
</RelativeLayout>
</ScrollView>
