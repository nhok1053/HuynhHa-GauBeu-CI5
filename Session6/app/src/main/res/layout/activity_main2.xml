<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.hasan.session6.Main2Activity">

    <LinearLayout

        android:layout_margin="2dp"
        android:id="@+id/Block1"
        android:background="#64FFDA"
        android:layout_weight="113"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:text="THURSDAY, JULY 14"
                    android:textColor="#706a6a"
                    android:textSize="6pt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:text="For You"
                    android:textStyle="bold"
                    android:textSize="18pt"
                    android:textColor="#18e9e9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-10dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="fitXY"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imgTop"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="4dp"
                />
        </LinearLayout>

    </LinearLayout>



    <RelativeLayout
        android:layout_weight="267"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFB74D">

        <LinearLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:orientation="vertical">
            <LinearLayout

                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_margin="1dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:scaleType="center"
                        android:id="@+id/img_LargeLeft"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView

                        android:id="@+id/img_Centre1"
                        android:scaleType="center"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <ImageView
                        android:id="@+id/img_Centre2"
                        android:scaleType="center"

                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                </LinearLayout>

                <LinearLayout

                    android:layout_margin="1dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:scaleType="center"
                        android:id="@+id/img_LargeRight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_margin="2dp">

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/img_SmallBottom1"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/img_SmallBottom2"

                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/img_SmallBottom3"

                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/img_SmallBottom4"

                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/img_SmallBottom5"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



    <RelativeLayout
        android:layout_weight="408"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:layout_margin="2dp">

        <TextView
            android:text="Recently Played"
            android:textColor="#EC407A"
            android:textStyle="bold"
            android:textSize="12pt"
            android:id="@+id/tvRecent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:background="#FFF176"
            android:id="@+id/layout"
            android:layout_below="@id/tvRecent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp">

            <ImageView
                android:id="@+id/img_Recently1"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="164dp" />
            <ImageView
                android:id="@+id/img_Recently2"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:background="#E8F5E9"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_r1"
                android:layout_weight="1.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img_r2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/img_r3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/img_r4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/img_r5"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
